# ============================================
# KAYAK TRAVEL PLATFORM - ENVIRONMENT CONFIG
# ============================================
# Copy this file to .env and update values

# Application
NODE_ENV=development
PORT=5001

# MySQL Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=kayak_user
MYSQL_PASSWORD=kayak_pass_2024
MYSQL_DATABASE=kayak_db
MYSQL_ROOT_PASSWORD=kayak_root_2024

# MongoDB Database  
MONGO_USER=kayak_admin
MONGO_PASSWORD=kayak_mongo_2024
MONGO_DATABASE=kayak_analytics
MONGODB_URI=mongodb://localhost:27017/kayak_analytics

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600

# Kafka Message Queue
KAFKA_BROKERS=localhost:29092
KAFKA_CLIENT_ID=kayak-admin-service
KAFKA_GROUP_ID=kayak-admin-group

# JWT Authentication
JWT_SECRET=kayak_jwt_secret_key_2024_secure_change_in_production
JWT_EXPIRES_IN=24h

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# AWS Configuration (for production deployment)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

